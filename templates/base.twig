{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">

		<header class="header hide-on-med-and-down">
			{% block header %}
                <div class="row grey-background z-depth-1" style="opacity: 1; margin: 0; padding: 0; height: 150px;">
                    <div class="col" style="margin: 0">
                        <img src="http://45.79.193.68/wp-content/themes/twig-wp-theme/static/logo.png" style="height: 150px; padding: 5px;">
                    </div>

                    <div class="col right" style="padding: 0">
                        <div class="row">
                            {% include "contact.twig" %}
                        </div>
                        <div class="row" style="height: 75%">
                            {% include "menu.twig"%}
                        </div>
                    </div>
                </div>

				<div class="blue-border" style="height: 10px">

                    </div><!-- #nav -->

			{% endblock %}
		</header>

		<header class="header hide-on-large-only grey-background">
			<div class="row">
				<a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
				<img src="http://45.79.193.68/wp-content/themes/twig-wp-theme/static/logo.png" style="height: 100px; padding: 5px;  display: block; margin: auto;" class="hide-on-med-and-up">
				{#Shows collapsed menu #}
                <a class="waves-effect waves-light btn-flat hide-on-med-and-up center-align" style="width: 100%" onclick="showHideMenu()">Show Navigation</a>

				<ul id="slide-out" class="side-nav">
					<li  class="row grey-background">
						<img src="http://45.79.193.68/wp-content/themes/twig-wp-theme/static/logo.png" style="height: 150px; display: block; margin: auto; padding: 10px">
					</li>
					<li>
                        {% include "menu_mobile.twig"%}
					</li>
				</ul>
			</div>
			<div class="row menu" >
				<img src="http://45.79.193.68/wp-content/themes/twig-wp-theme/static/logo.png" style="height: 100px; padding: 0px 40px">
                {% include "contact.twig" %}
			</div>
			<div class="row menu">
                {% include "menu_mobile.twig"%}
			</div>
			<div class="blue-border" style="height: 10px">

			</div>
		</header>

		{#<div class="carousel">#}
			{#<a class="carousel-item" href="#one!"><img src="../static/AT+-+Vienna+x2+01.jpg"></a>#}
			{#<a class="carousel-item" href="#two!"><img src="http://lorempixel.com/250/250/nature/2"></a>#}
			{#<a class="carousel-item" href="#three!"><img src="http://lorempixel.com/250/250/nature/3"></a>#}
			{#<a class="carousel-item" href="#four!"><img src="http://lorempixel.com/250/250/nature/4"></a>#}
			{#<a class="carousel-item" href="#five!"><img src="http://lorempixel.com/250/250/nature/5"></a>#}
		{#</div>#}

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>

<script>

    $(".menu").hide();
    $(".button-collapse").sideNav();

    function showHideMenu() {
//        alert("THIS IS AN ERROR")
        $(".menu").toggle("fast");
    }

</script>
