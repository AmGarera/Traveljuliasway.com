{#{% include "spacing.twig" %}#}

<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
		<h4 class="h4"><a href="{{post.link}}">{{post.title}}</a></h4>
		<img src={{post.image}}></img>
		<p>{{post.get_preview}}</p>
		{% if post.get_thumbnail %}
			<img class="responsive-img" src="{{post.thumbnail.src}}" />
		{% endif %}
		<br></br>
	{% endblock %}
	<br></br>
</article>